<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/hintTV"
        style="@style/AppTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/inputET"
        style="@style/AppEditTextStyle"
        android:layout_width="match_parent"
        android:layout_below="@+id/hintTV"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/infoIV"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/inputET"
        android:layout_alignBottom="@+id/inputET"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/logo"
        android:visibility="gone" />

    <TextView
        android:id="@+id/errorTV"
        style="@style/AppEditTextErrorStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputET"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/copyTV"
        style="@style/AppTextButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputET"
        android:layout_alignParentEnd="true"
        android:padding="2dp"
        android:visibility="invisible" />

</RelativeLayout>